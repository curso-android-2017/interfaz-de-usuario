<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_controles_entrada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.darwindeveloper.cursoandroid0.ControlesEntradaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@+id/layout_botones">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="TextView_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_text"
                android:gravity="center_horizontal"
                android:textSize="40dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="textPersonName"
                android:ems="10"
                android:id="@+id/editText_textPersonName" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText_textEmailAddress"
                android:imeOptions="actionSend"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="number"
                android:ems="10"
                android:id="@+id/editText_number" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="numberDecimal"
                android:ems="10"
                android:id="@+id/editText_numberDecimal" />

            <AutoCompleteTextView
                android:hint="AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/autoCompleteTextView" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_botones"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            android:id="@+id/imageButton"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:elevation="0dp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:textColor="#fff"
            android:elevation="2dp"
            />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:layout_weight="1.01"
            android:drawableTop="@mipmap/ic_launcher"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>
</RelativeLayout>
